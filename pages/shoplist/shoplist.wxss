.shop{
  padding: 20rpx;
  border-bottom: 1rpx solid #ddd;
  display: flex;
  position: relative;
}
.shop image{
  width: 155rpx;
  height: 155rpx;
  margin-right: 20rpx;
}
.shop-info{
  width: 520rpx;
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #999;
}
.shop-info .shop-title{
  font-size: 14px;
  color: #333;
  width: 380rpx;
}

.shop-start{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  color: #e2e2e2;
}
.shop-before{
  color: #f19e38;
  position: absolute;
  left: 0;
  top: 0;
  width: 50%;
  overflow: hidden;
}
