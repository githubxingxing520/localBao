page{
  background-color: #f1f1f1;
}
.card{
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  margin: 60rpx 20rpx;
  padding: 20rpx 25rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.card image{
  width: 100%;
  height: 300rpx;
}
.card .card-title{
  font-size: 20px;
  margin-bottom: 20rpx;
}
.card .card-date{
  font-size: 14px;
  color: #ccc;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
}
.card-desc{
  font-size: 16px;
  color: #333;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ddd;
}
.card-read{
  font-size: 14px;
  color: #999;
  margin: 10rpx 0;
}
